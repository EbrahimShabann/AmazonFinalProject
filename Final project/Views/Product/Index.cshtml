<div class="container-fluid p-0">
    <!-- Header with Actions -->
    <h2 class="mb-0">Manage Products</h2>
    <div class="d-flex justify-content-between align-items-center mb-4">
     
        <div class="d-flex gap-3">
            <div class="position-relative" style="width: 300px;">
                <input type="text" class="form-control amazon-search" placeholder="Search products...">
                <button class="btn amazon-search-btn" type="button">
                    <i class="fas fa-search"></i>
                </button>
            </div>
            <a class="btn btn-warning amazon-add-btn UpSert-btn" href="/Product/UpSert" data-id="">
                <i class="fas fa-plus me-2"></i>
                Add Product
            </a>
        </div>
        <div class="d-flex ">

            <form method="get" id="paginationForm" class="amazon-page-size-form">
                <div class="d-flex align-items-center gap-2">
                    <label for="size" class="mb-0 small text-muted">Items per page:</label>
                    <select name="size" id="size" class="form-select amazon-page-select" onchange="this.form.submit()">
                        @foreach (var sizeOption in sizeOptions)
                        {
                            <option value="@sizeOption" selected="@(pageSize == sizeOption ? "selected" : null)">@sizeOption</option>
                        }
                    </select>
                </div>
                <input type="hidden" name="page" value="@currentPage" />
            </form>

        </div>
    </div>

    <!-- Products Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 amazon-product-table">
                    <thead class="amazon-table-header">
                        <tr>
                            <th width="30%">Product</th>
                            <th class="text-center">Category</th>
                            <th class="text-center">Price</th>
                            <th class="text-center">Stock</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr class="amazon-product-row">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="me-3">
                                            <img src="/images/@item.image_url" class="amazon-product-image" alt="product">
                                        </div>
                                        <div>
                                            <div class="amazon-product-title">@item.name</div>
                                            <div class="amazon-product-id">ASIN: @item.id</div>
                                            <div class="amazon-product-brand">Brand: @item.Brand</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="amazon-badge">@item.Category.name</span>
                                </td>
                                <td class="text-center">
                                    <span class="amazon-price">@item.price &pound;</span>
                                </td>
                                <td class="text-center">
                                    @if (item.stock_quantity > 10)
                                    {
                                        <span class="amazon-stock in-stock">In Stock</span>
                                    }
                                    else if (item.stock_quantity > 0)
                                    {
                                        <span class="amazon-stock low-stock">Only @item.stock_quantity left</span>
                                    }
                                    else
                                    {
                                        <span class="amazon-stock out-of-stock">Out of Stock</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.approved_by != null)
                                    {
                                        <span class="amazon-status active">Active</span>
                                    }
                                    else
                                    {
                                        <span class="amazon-status inactive">Inactive</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">
                                        <button class="btn btn-sm amazon-action-btn details-btn" data-id="@item.id" title="View">
                                            <i class="far fa-eye"></i>
                                        </button>
                                        <a href="/Product/UpSert/@item.id" class="btn btn-sm amazon-action-btn UpSert-Btn" title="Edit">
                                            <i class="far fa-edit"></i>
                                        </a>
                                       
                                        <button class="btn btn-sm amazon-action-btn delete-btn" data-id="@item.id" title="Delete">
                                            <i class="far fa-trash-alt"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <nav class="d-flex justify-content-between align-items-center my-4">
            <div class="text-muted small">
                Showing page @currentPage of @totalPages
            </div>

            <ul class="pagination amazon-pagination mb-0">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="?page=@(currentPage - 1)&size=@pageSize" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                @if (totalPages == 0)
                {
                    <li class="page-item disabled">
                        <a class="page-link">0</a>
                    </li>
                }
                else
                {
                    <!-- Always show first page -->
                    <li class="page-item @(1 == currentPage ? "active" : "")">
                        <a class="page-link" href="?page=1&size=@pageSize">1</a>
                    </li>

                    @if (currentPage > 3)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }

                    @for (int i = Math.Max(2, currentPage - 1); i <= Math.Min(totalPages - 1, currentPage + 1); i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="?page=@i&size=@pageSize">@i</a>
                        </li>
                    }

                    @if (currentPage < totalPages - 2)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }

                    @if (totalPages > 1)
                    {
                        <li class="page-item @(totalPages == currentPage ? "active" : "")">
                            <a class="page-link" href="?page=@totalPages&size=@pageSize">@totalPages</a>
                        </li>
                    }
                }

                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="?page=@(currentPage + 1)&size=@pageSize" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
            </nav>


        </div>
    </div>
</div>

