@using Final_project.Services.SellerPagination
@using Final_project.ViewModel.Seller
@model PagedResult<ProductsVM>

    @{
        ViewData["Title"] = "Products";
    var currentPage = (int)Model.PageNumber;
    var totalPages = (int)Model.TotalPages;
    var pageSize = (int)Model.PageSize;
    var sizeOptions = new[] { 2, 5, 10, 20, 50 };
}


<style>

   /* Pagination style */
    .amazon-pagination {
        --active-bg: #EDFDFF;
        --active-border: #007185;
        --active-color: #007185;
        --hover-bg: #F5F6F6;
        --disabled-color: #D5D9D9;
    }

    .amazon-pagination .page-item {
        margin: 0 2px;
    }

    .amazon-pagination .page-link {
        color: #0F1111;
        border: 1px solid #D5D9D9;
        border-radius: 6px !important;
        padding: 6px 12px;
        font-size: 13px;
        min-width: 36px;
        text-align: center;
    }

    .amazon-pagination .page-item.active .page-link {
        background-color: var(--active-bg);
        border-color: var(--active-border);
        color: var(--active-color);
        font-weight: 600;
    }

    .amazon-pagination .page-item.disabled .page-link {
        color: var(--disabled-color);
    }

    .amazon-pagination .page-link:hover {
        background-color: var(--hover-bg);
        text-decoration: none;
    }

    .amazon-pagination .page-link[aria-label] {
        padding: 6px 10px;
    }

    .amazon-page-size-form {
        position: absolute;
        top: 110px;
        right: 155px;
    }

    .amazon-page-select {
        width: 70px;
        border-radius: 6px;
        border: 1px solid #D5D9D9;
        padding: 4px 8px;
        font-size: 13px;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23343a40' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e");
        background-position: right 8px center;
        background-size: 12px;
        background-repeat: no-repeat;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
    }

        .amazon-page-select:focus {
            border-color: #007185;
            box-shadow: 0 0 0 3px #c8f3fa;
            outline: none;
        }

    /* Amazon Style Components */
    .amazon-search {
        border-radius: 8px;
        border: 1px solid #D5D9D9;
        padding-right: 40px;
    }

        .amazon-search:focus {
            border-color: #007185;
            box-shadow: 0 0 0 3px #c8f3fa;
        }

    .amazon-search-btn {
        position: absolute;
        right: 0;
        top: 0;
        height: 100%;
        width: 40px;
        background: none;
        border: none;
        color: #555;
    }

    .amazon-add-btn {
        background: #FFD814;
        border-color: #FCD200;
        color: #0F1111;
        font-weight: 500;
        border-radius: 8px;
    }

        .amazon-add-btn:hover {
            background: #F7CA00;
            border-color: #F2C200;
        }

    .amazon-table-header {
        background-color: #F2F3F3;
        border-bottom: 1px solid #D5D9D9;
    }

        .amazon-table-header th {
            font-size: 14px;
            font-weight: 600;
            color: #0F1111;
            padding: 12px 16px;
        }

    .amazon-product-row td {
        vertical-align: middle;
        padding: 16px;
        border-bottom: 1px solid #EAEDED;
    }

    .amazon-product-image {
        width: 60px;
        height: 60px;
        object-fit: contain;
        border: 1px solid #EAEDED;
        border-radius: 4px;
    }

    .amazon-product-title {
        font-size: 14px;
        font-weight: 500;
        color: #0066c0;
        margin-bottom: 4px;
    }

        .amazon-product-title:hover {
            color: #c45500;
            text-decoration: underline;
        }

    .amazon-product-id, .amazon-product-brand {
        font-size: 12px;
        color: #565959;
    }

    .amazon-badge {
        display: inline-block;
        padding: 4px 8px;
        background-color: #E3E6E6;
        border-radius: 3px;
        font-size: 12px;
        color: #0F1111;
    }

    .amazon-price {
        font-weight: 600;
        color: #0F1111;
    }

    .amazon-stock {
        font-size: 13px;
        font-weight: 500;
    }

    .in-stock {
        color: #007600;
    }

    .low-stock {
        color: #B12704;
    }

    .out-of-stock {
        color: #565959;
    }

    .amazon-status {
        font-size: 13px;
        font-weight: 500;
        padding: 4px 8px;
        border-radius: 3px;
    }

    .active {
        background-color: #D5E8D4;
        color: #007600;
    }

    .inactive {
        background-color: #F5F6F6;
        color: #565959;
    }

    .amazon-action-btn {
        color: #555;
        background: #F0F2F2;
        border: 1px solid #D5D9D9;
        border-radius: 4px;
        padding: 6px 8px;
    }

        .amazon-action-btn:hover {
            background: #E3E6E6;
            color: #0F1111;
        }

    .amazon-pagination .page-item {
        margin: 0 2px;
