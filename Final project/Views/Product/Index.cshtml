    .amazon-pagination .page-link {
        color: #0F1111;
        border: 1px solid #D5D9D9;
        border-radius: 4px;
        padding: 5px 10px;
        font-size: 13px;
    }

    .amazon-pagination .page-item.active .page-link {
        background-color: #EDFDFF;
        border-color: #007185;
        color: #007185;
        font-weight: 600;
    }

    .amazon-pagination .page-link:hover {
