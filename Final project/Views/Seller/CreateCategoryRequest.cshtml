@model Final_project.Models.CategoryRequest
@{
    ViewData["Title"] = "Request for Creating Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-white">
                    <h3 class="mb-0"><i class="fas fa-plus me-2"></i>Request for Creating Category</h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }
                    @using (Html.BeginForm("CreateCategoryRequest", "Seller", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="mb-3">
                            @Html.LabelFor(m => m.CategoryName, "Category Name / اسم التصنيف", new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control", maxlength = 255, required = "required", placeholder = "Enter category name..." })
                            @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                            @Html.LabelFor(m => m.CategoryDiscription, "Category Description / وصف التصنيف (اختياري)", new { @class = "form-label" })
                            @Html.TextAreaFor(m => m.CategoryDiscription, 3, 50, new { @class = "form-control", placeholder = "Enter description..." })
                            @Html.ValidationMessageFor(m => m.CategoryDiscription, "", new { @class = "text-danger" })
                            </div>
                            <!-- AdminComment is not needed for seller request, but if you want to show it, uncomment below -->
                            <!--
                            <div class="mb-3">
                        @Html.LabelFor(m => m.AdminComment, "Admin Comment / تعليق الأدمن (اختياري)", new { @class = "form-label" })
                        @Html.TextAreaFor(m => m.AdminComment, 2, 50, new { @class = "form-control", placeholder = "You can leave this empty" })
                        @Html.ValidationMessageFor(m => m.AdminComment, "", new { @class = "text-danger" })
                            </div>
                            -->
                            <button type="submit" class="btn btn-warning"><i class="fas fa-paper-plane me-1"></i>Send Request</button>
                            <a href="@Url.Action("SellerDashboard", "Seller")" class="btn btn-secondary ms-2">Cancel</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}