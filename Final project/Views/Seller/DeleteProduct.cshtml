@model Final_project.Models.product

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this product?</strong>
</div>

<div>
    <h4>@Model.name</h4>
    <p>@Model.description</p>
    @if (Model.product_images != null && Model.product_images.Any())
    {
        <img src="@Model.product_images.First().image_url" alt="Product Image" width="100" />
    }
    else
    {
        <span>No Image</span>
    }
</div>

<form asp-action="DeleteProduct" method="post">
    <input type="hidden" asp-for="id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="AllProducts" class="btn btn-secondary">Cancel</a>
</form> 