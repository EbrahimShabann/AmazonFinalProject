@model Final_project.Models.review_reply
@{
    ViewData["Title"] = "Reply to Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var review = ViewBag.Review as Final_project.Models.product_review;
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0"><i class="fas fa-reply me-2"></i>Reply to Review</h3>
                </div>
                <div class="card-body">
                    @if (review != null)
                    {
                        <div class="mb-3 p-3" style="background:rgba(255,255,255,0.08);border-radius:10px;">
                            <strong>Product:</strong> @review.product?.name <br />
                            <strong>Customer:</strong> @review.User?.UserName <br />
                            <strong>Rating:</strong> @review.rating <br />
                            <strong>Comment:</strong> @review.comment <br />
                            <strong>Date:</strong> @review.created_at?.ToString("yyyy-MM-dd HH:mm")
                        </div>
                    }
                    @using (Html.BeginForm("AddReviewReply", "Seller", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.review_id)
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="mb-3">
                            @Html.LabelFor(m => m.reply_text, "Your Reply", new { @class = "form-label" })
                            @Html.TextAreaFor(m => m.reply_text, 4, 80, new { @class = "form-control", placeholder = "Write your reply...", required = "required" })
                            @Html.ValidationMessageFor(m => m.reply_text, "", new { @class = "text-danger" })
                        </div>
                        <button type="submit" class="btn btn-info"><i class="fas fa-paper-plane me-1"></i>Send Reply</button>
                        <a href="@Url.Action("ProductReviews", "Seller")" class="btn btn-secondary ms-2">Cancel</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}