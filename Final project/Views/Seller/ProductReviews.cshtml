@model IEnumerable<Final_project.Models.product_review>
@{
    ViewData["Title"] = "Product Reviews";
    var avgRatings = ViewBag.AvgRatings as Dictionary<string, double>;
}
<h2>Product Reviews</h2>
<form method="get" class="mb-3">
    <div class="form-row">
        <div class="form-group col-md-3">
            <label>Product</label>
            <select name="productId" class="form-control">
                <option value="">All Products</option>
                @foreach (var p in ViewBag.Products as List<Final_project.Models.product>)
                {
                    if (ViewBag.ProductId == p.id)
                    {
                        <option value="@p.id" selected>@p.name</option>
                    }
                    else
                    {
                        <option value="@p.id">@p.name</option>
                    }
                }
            </select>
        </div>
        <div class="form-group col-md-2">
            <label>Rating</label>
            <select name="rating" class="form-control">
                <option value="">All Ratings</option>
                @if (ViewBag.Rating == 1) { <option value="1" selected>1 Star</option> } else { <option value="1">1 Star</option> }
                @if (ViewBag.Rating == 2) { <option value="2" selected>2 Stars</option> } else { <option value="2">2 Stars</option> }
                @if (ViewBag.Rating == 3) { <option value="3" selected>3 Stars</option> } else { <option value="3">3 Stars</option> }
                @if (ViewBag.Rating == 4) { <option value="4" selected>4 Stars</option> } else { <option value="4">4 Stars</option> }
                @if (ViewBag.Rating == 5) { <option value="5" selected>5 Stars</option> } else { <option value="5">5 Stars</option> }
            </select>
        </div>
        <div class="form-group col-md-2">
            <label>Start Date</label>
            <input type="date" name="startDate" value="@ViewBag.StartDate" class="form-control" />
        </div>
        <div class="form-group col-md-2">
            <label>End Date</label>
            <input type="date" name="endDate" value="@ViewBag.EndDate" class="form-control" />
        </div>
        <div class="form-group col-md-1 align-self-end">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </div>
</form>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product</th>
            <th>Customer</th>
            <th>Rating</th>
            <th>Comment</th>
            <th>Date</th>
            <th>Avg. Rating</th>
            <th>Replies</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var review in Model)
    {
        <tr>
            <td>@review.product?.name</td>
            <td>@review.User?.UserName</td>
            <td>@review.rating</td>
            <td>@review.comment</td>
            <td>@review.created_at?.ToString("yyyy-MM-dd")</td>
            <td>
                @(avgRatings != null && avgRatings.ContainsKey(review.product_id) ? avgRatings[review.product_id].ToString("0.00") : "-")
            </td>
            <td>
                @if (review.replies != null && review.replies.Any())
                {
                    <div class="replies-container">
                        @foreach (var reply in review.replies)
                        {
                            <div class="reply-item mb-2 p-2 border rounded">
                                <strong>@reply.Replier?.UserName:</strong>
                                <p class="mb-1">@reply.reply_text</p>
                                <small class="text-muted">@reply.created_at?.ToString("yyyy-MM-dd HH:mm")</small>
                                @if (reply.is_seller_reply == true)
                                {
                                    <form asp-action="DeleteReviewReply" method="post" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="replyId" value="@reply.id" />
                                        <button type="submit" class="btn btn-danger btn-sm ml-2" onclick="return confirm('Delete this reply?')">Delete</button>
                                    </form>
                                }
                            </div>
                        }
                    </div>
                }
                else
                {
                    <span class="text-muted">No replies</span>
                }
            </td>
            <td>
                <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#replyModal-@review.id">
                    Reply
                </button>
            </td>
        </tr>
        

        <div class="modal fade" id="replyModal-@review.id" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Reply to Review</h5>
                        <button type="button" class="close" data-dismiss="modal">
                            <span>&times;</span>
                        </button>
                    </div>
                    <form asp-action="ReplyToReview" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="reviewId" value="@review.id" />
                        <div class="modal-body">
                            <div class="form-group">
                                <label>Your Reply:</label>
                                <textarea name="replyText" class="form-control" rows="3" required></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Send Reply</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
    </tbody>
</table> 