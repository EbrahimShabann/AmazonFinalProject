@model List<CategoryRequest>

@{
    ViewData["Title"] = "Index";
    Layout = "AdminLayout";

}

<style>
    /* New styles for category requests */
    .content {
        flex: 1;
        padding: 2rem;
        background: var(--amazon-light);
    }

    .page-title {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 2rem;
    }

        .page-title h1 {
            color: var(--amazon-dark);
            font-size: 2rem;
        }

        .page-title i {
            color: var(--amazon-orange);
            font-size: 2rem;
        }

    .requests-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
        gap: 25px;
    }

    .request-card {
        background: var(--amazon-card);
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        padding: 1.8rem;
        transition: all 0.3s ease;
        border-top: 4px solid var(--amazon-orange);
        animation: fadeIn 0.6s ease forwards;
        opacity: 0;
        transform: translateY(20px);
    }

        .request-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
        }

    .request-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.2rem;
        padding-bottom: 0.8rem;
        border-bottom: 1px solid #eee;
    }

    .request-seller {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .seller-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: var(--amazon-blue);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
    }

    .seller-info h3 {
        color: var(--amazon-dark);
        font-size: 1.1rem;
    }

    .seller-info p {
        color: #777;
        font-size: 0.9rem;
    }

    .request-date {
        color: #999;
        font-size: 0.85rem;
    }

    .request-details {
        margin-bottom: 1.8rem;
    }

    .category-name {
        font-size: 1.3rem;
        color: var(--amazon-dark);
        margin-bottom: 0.8rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .category-name i {
            color: var(--amazon-orange);
        }

    .category-description {
        line-height: 1.6;
        color: #555;
        padding: 12px;
        background: #f9f9f9;
        border-radius: 6px;
        border-left: 3px solid var(--amazon-orange);
    }

    .request-actions {
        display: flex;
        gap: 15px;
        justify-content: flex-end;
    }

    .btn {
        padding: 0.7rem 1.5rem;
        border: none;
        border-radius: 4px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .btn-approve {
        background: var(--amazon-success);
        color: white;
    }

        .btn-approve:hover {
            background: #008a4a;
            transform: scale(1.05);
        }

    .btn-reject {
        background: var(--amazon-danger);
        color: white;
    }

        .btn-reject:hover {
            background: #c0392b;
            transform: scale(1.05);
        }



    .empty-state {
        grid-column: 1 / -1;
        text-align: center;
        padding: 4rem 0;
        opacity: 0.7;
    }

        .empty-state i {
            font-size: 5rem;
            color: var(--amazon-orange);
            margin-bottom: 1.5rem;
            animation: bounce 2s infinite;
        }

        .empty-state h3 {
            font-size: 1.8rem;
            color: var(--amazon-dark);
            margin-bottom: 1rem;
        }

        .empty-state p {
            font-size: 1.1rem;
            color: #777;
            max-width: 600px;
            margin: 0 auto;
            line-height: 1.6;
        }

    /* Animations */
    @@keyframes slideDown {
        from {
            transform: translateY(-100%);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.1);
        }

        100% {
            transform: scale(1);
        }
    }

    @@keyframes fadeIn {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }

        40% {
            transform: translateY(-20px);
        }

        60% {
            transform: translateY(-10px);
        }
    }

    /* Responsive adjustments */
    @@media (max-width: 900px) {
        .requests-container {
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        }
    }

    @@media (max-width: 768px) {
        .main-container {
            flex-direction: column;
        }

        .sidebar {
            width: 100%;
            padding: 0.5rem 0;
        }

        .sidebar-item {
            padding: 0.8rem;
        }

        .sidebar:hover {
            transform: none;
        }

        .requests-container {
            grid-template-columns: 1fr;
        }
    }
</style>
<!-- Content Area -->
<div class="content">
    <div class="page-title">
        <i class="fas fa-folder-plus"></i>
        <h1>Category Requests</h1>
    </div>

    <div class="requests-container">
        <!-- Request Card 1 -->
        @foreach (var request in Model)
        {
            <div class="request-card">
                <div class="request-header">
                    <div class="request-seller">
                        <img src="/images/users/@request.User.profile_picture_url" class="seller-avatar" />
                        <div class="seller-info">
                            <h3>@request.User.UserName</h3>
                        </div>
                    </div>
                    <div class="request-date">@request.CreatedAt</div>
                </div>
                <div class="request-details">
                    <h2 class="category-name">
                        @request.CategoryName
                    </h2>
                    <p class="category-description">
                        @request.CategoryDiscription
                    </p>
                </div>
                <div class="request-actions">
                    <button class="btn btn-reject" data-id="@request.requredId">
                        <i class="fas fa-times"></i>
                        Reject
                    </button>
                    <button class="btn btn-approve" data-id="@request.requredId">
                        <i class="fas fa-check"></i>
                        Approve
                    </button>
                </div>
            </div>
        }

        <!-- Request Card 2 -->
        <div class="request-card" style="animation-delay: 0.2s">
            <div class="request-header">
                <div class="request-seller">
                    <div class="seller-avatar">ES</div>
                    <div class="seller-info">
                        <h3>Emma Smith</h3>
                        <p>New Seller</p>
                    </div>
                </div>
                <div class="request-date">Yesterday, 3:45 PM</div>
            </div>

            <div class="request-details">
                <h2 class="category-name">
                    <i class="fas fa-seedling"></i>
                    Sustainable Products
                </h2>
                <p class="category-description">
                    Eco-friendly and sustainable products made from recycled materials,
                    with minimal environmental impact. Includes home goods, personal care,
                    and reusable items that promote a zero-waste lifestyle.
                </p>
            </div>

            <div class="request-actions">
                <button class="btn btn-reject">
                    <i class="fas fa-times"></i>
                    Reject
                </button>
                <button class="btn btn-approve">
                    <i class="fas fa-check"></i>
                    Approve
                </button>
            </div>
        </div>

        <!-- Request Card 3 -->
        <div class="request-card" style="animation-delay: 0.3s">
            <div class="request-header">
                <div class="request-seller">
                    <div class="seller-avatar">RT</div>
                    <div class="seller-info">
                        <h3>Robert Taylor</h3>
                        <p>Top Rated Seller</p>
                    </div>
                </div>
                <div class="request-date">Oct 12, 2023</div>
            </div>

            <div class="request-details">
                <h2 class="category-name">
                    <i class="fas fa-dumbbell"></i>
                    Home Fitness Equipment
                </h2>
                <p class="category-description">
                    Dedicated category for home gym equipment including treadmills,
                    weights, resistance bands, and yoga accessories. With more people
                    working out at home, this category will serve a growing market.
                </p>
            </div>

            <div class="request-actions">
                <button class="btn btn-reject">
                    <i class="fas fa-times"></i>
                    Reject
                </button>
                <button class="btn btn-approve">
                    <i class="fas fa-check"></i>
                    Approve
                </button>
            </div>
        </div>

        <!-- Request Card 4 -->
        <div class="request-card" style="animation-delay: 0.4s">
            <div class="request-header">
                <div class="request-seller">
                    <div class="seller-avatar">MJ</div>
                    <div class="seller-info">
                        <h3>Michael Johnson</h3>
                        <p>Verified Seller</p>
                    </div>
                </div>
                <div class="request-date">Oct 10, 2023</div>
            </div>

            <div class="request-details">
                <h2 class="category-name">
                    <i class="fas fa-gamepad"></i>
                    Retro Gaming
                </h2>
                <p class="category-description">
                    A nostalgic category for retro gaming consoles, cartridges,
                    accessories, and memorabilia. Targets collectors and enthusiasts
                    of classic gaming systems from the 80s and 90s.
                </p>
            </div>

            <div class="request-actions">
                <button class="btn btn-reject">
                    <i class="fas fa-times"></i>
                    Reject
                </button>
                <button class="btn btn-approve">
                    <i class="fas fa-check"></i>
                    Approve
                </button>
            </div>
        </div>

        <!-- Request Card 5 -->
        <div class="request-card" style="animation-delay: 0.5s">
            <div class="request-header">
                <div class="request-seller">
                    <div class="seller-avatar">SL</div>
                    <div class="seller-info">
                        <h3>Sarah Lopez</h3>
                        <p>Pro Seller</p>
                    </div>
                </div>
                <div class="request-date">Oct 8, 2023</div>
            </div>

            <div class="request-details">
                <h2 class="category-name">
                    <i class="fas fa-paint-brush"></i>
                    Digital Art Supplies
                </h2>
                <p class="category-description">
                    Specialized category for digital artists including drawing tablets,
                    styluses, graphic software, and accessories. As digital art grows,
                    this category will help creators find the tools they need.
                </p>
            </div>

            <div class="request-actions">
                <button class="btn btn-reject">
                    <i class="fas fa-times"></i>
                    Reject
                </button>
                <button class="btn btn-approve">
                    <i class="fas fa-check"></i>
                    Approve
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    document.querySelectorAll('.btn-approve').forEach(button => {
        button.addEventListener('click', function () {
            const id = this.getAttribute('data-id');
            fetch(`/AdminCategoryRequest/Approve/${id}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
            }).then(() => location.reload());
        });
    });

    document.querySelectorAll('.btn-reject').forEach(button => {
        button.addEventListener('click', function () {
            const id = this.getAttribute('data-id');
            fetch(`/AdminCategoryRequest/Reject/${id}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
            }).then(() => location.reload());
        });
    });

    // Update badge count when requests are approved/rejected
    function updateBadgeCount(change) {
        const badge = document.querySelector('.sidebar .badge');
        let currentCount = parseInt(badge.textContent);
        currentCount += change;

        if(currentCount < 0) currentCount = 0;

        badge.textContent = currentCount;

        // If no more requests, show empty state
        if(currentCount === 0) {
            document.querySelector('.requests-container').innerHTML = `
                <div class="empty-state">
                    <i class="fas fa-check-circle"></i>
                    <h3>All Requests Processed!</h3>
                    <p>You've successfully reviewed all category requests. New requests from sellers will appear here when submitted.</p>
                </div>
            `;
        }
    }

</script>
