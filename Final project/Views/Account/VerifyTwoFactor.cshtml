<!-- Views/Account/VerifyTwoFactor.cshtml -->
@model TwoFactorVerificationVM

@{
    ViewData["Title"] = "Two-Factor Authentication";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4 class="text-center">Verify Your Identity</h4>
            </div>
            <div class="card-body">
                <p class="text-center text-muted">We've sent a verification code to your phone. Please enter it below.</p>

                <form asp-action="VerifyTwoFactor" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="Purpose" />
                    <input type="hidden" asp-for="RememberMe" />

                    <div class="form-group mb-3">
                        <label asp-for="Code" class="form-label">Verification Code</label>
                        <input asp-for="Code" class="form-control text-center" style="font-size: 1.5em; letter-spacing: 0.5em;" maxlength="6" placeholder="000000" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Verify</button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <p class="text-muted">Didn't receive the code?</p>
                    <button id="resendBtn" class="btn btn-link">Resend Code</button>
                    <div id="countdown" class="text-muted" style="display: none;"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const resendBtn = document.getElementById('resendBtn');
        const countdown = document.getElementById('countdown');
        let countdownTime = 0;
        let countdownInterval;

        function startCountdown(seconds) {
            countdownTime = seconds;
            resendBtn.style.display = 'none';
            countdown.style.display = 'block';

            countdownInterval = setInterval(function() {
                countdown.textContent = `Resend available in ${countdownTime} seconds`;
                countdownTime--;

                if (countdownTime < 0) {
                    clearInterval(countdownInterval);
                    resendBtn.style.display = 'block';
                    countdown.style.display = 'none';
                }
            }, 1000);
        }

        resendBtn.addEventListener('click', function() {
            fetch('/Account/ResendTwoFactorCode', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Verification code sent!');
                    startCountdown(60); // 60 second cooldown
                } else {
                    alert('Failed to send code: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while sending the code.');
            });
        });

        // Auto-focus on code input
        document.querySelector('input[name="Code"]').focus();

        // Auto-submit when 6 digits are entered
        document.querySelector('input[name="Code"]').addEventListener('input', function(e) {
            if (e.target.value.length === 6) {
                // Small delay to allow user to see the complete code
                setTimeout(() => {
                    document.querySelector('form').submit();
                }, 500);
            }
        });
    });
</script>