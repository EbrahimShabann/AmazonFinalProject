@model ForgotPasswordVM
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_AccountPageLayout";
}

<!-- Animated Background -->
<div class="animated-bg">
    <div class="floating-shape">🔑</div>
    <div class="floating-shape">📧</div>
    <div class="floating-shape">🔒</div>
    <div class="floating-shape">✉️</div>
</div>

<!-- Particles System -->
<div class="particles">
    <div class="particle" style="left: 10%; animation-delay: 0s;"></div>
    <div class="particle" style="left: 20%; animation-delay: 2s;"></div>
    <div class="particle" style="left: 30%; animation-delay: 4s;"></div>
    <div class="particle" style="left: 40%; animation-delay: 6s;"></div>
    <div class="particle" style="left: 50%; animation-delay: 8s;"></div>
    <div class="particle" style="left: 60%; animation-delay: 10s;"></div>
    <div class="particle" style="left: 70%; animation-delay: 12s;"></div>
    <div class="particle" style="left: 80%; animation-delay: 14s;"></div>
    <div class="particle" style="left: 90%; animation-delay: 16s;"></div>
</div>

<div class="container-fluid">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-4">
            <div class="login-container">
                <!-- Logo with Amazon styling -->
                <div class="logo-container">
                    <div class="logo">
                        <i class="fa-brands fa-amazon"></i>
                    </div>
                </div>

                <!-- Password Reset Header with animation -->
                <div class="forgot-password-header">
                    <div class="reset-icon-container">
                        <i class="fas fa-key reset-key-icon"></i>
                    </div>
                    <h2 class="reset-title">Reset Your Password</h2>
                    <p class="reset-description">Enter your email address and we'll send you a link to reset your password.</p>
                </div>

                <!-- Forgot Password Form -->
                <form method="post" asp-action="ForgotPassword" asp-controller="Account">
                    <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>

                    <div class="form-group">
                        <span asp-validation-for="Email" class="validation-error"></span>
                        <input type="email"
                               class="form-control"
                               asp-for="Email"
                               placeholder="Enter your email address"
                               required />
                        <i class="fas fa-envelope input-icon"></i>
                    </div>

                    <button type="submit" class="btn-primary">
                        <span class="loading-spinner"></span>
                        <i class="fas fa-paper-plane button-icon"></i>
                        Send Reset Link
                    </button>
                </form>

                <!-- Back to Login Link -->
                <div class="signin-link">
                    <a asp-action="Login" asp-controller="Account" class="back-to-login">
                        <i class="fas fa-arrow-left"></i>
                        Back to Login
                    </a>
                </div>

                <!-- Help Text with improved styling -->
                <div class="help-text-container">
                    <div class="help-icon">
                        <i class="fas fa-info-circle"></i>
                    </div>
                    <small class="help-text">
                        The reset link will be valid for 24 hours. If you don't receive an email within a few minutes,
                        please check your spam folder or contact support.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Set body class for auth page styling */
    body {
        background: #ffffff;
    }

    /* Forgot Password Header Styles */
    .forgot-password-header {
        text-align: center;
        margin-bottom: 2rem;
        animation: slideUp 0.8s ease-out;
    }

    .reset-icon-container {
        margin-bottom: 1rem;
        position: relative;
    }

    .reset-key-icon {
        font-size: 3rem;
        color: var(--amazon-orange);
        animation: keyRotate 2s ease-in-out infinite;
        filter: drop-shadow(0 4px 8px rgba(255, 153, 0, 0.3));
    }

    @@keyframes keyRotate {
        0%, 100% {
            transform: rotate(-10deg) scale(1);
        }
        50% {
            transform: rotate(10deg) scale(1.1);
        }
    }

    .reset-title {
        color: var(--amazon-blue);
        margin-bottom: 1rem;
        font-weight: 600;
        font-size: 1.8rem;
        animation: textPulse 2s ease-in-out infinite;
    }

    .reset-description {
        color: #666;
        font-size: 1rem;
        line-height: 1.5;
        margin-bottom: 0;
        animation: fadeInOut 3s ease-in-out infinite;
    }

    /* Validation Summary Styles */
    .validation-summary {
        background: linear-gradient(135deg, #dc3545, #c82333);
        color: white;
        padding: 12px 15px;
        border-radius: 10px;
        margin-bottom: 1.5rem;
        text-align: center;
        border: none;
        animation: shake 0.5s ease-in-out;
        box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
    }

    .validation-summary i {
        margin-right: 8px;
        font-size: 1.1rem;
    }

    @@keyframes shake {
        0%, 100% { transform: translateX(0); }
        25% { transform: translateX(-5px); }
        75% { transform: translateX(5px); }
    }

    /* Validation Error Styles */
    .validation-error {
        color: #dc3545;
        font-size: 0.875rem;
        margin-bottom: 0.5rem;
        display: block;
        animation: fadeIn 0.3s ease-out;
    }

    /* Button Enhancements */
    .btn-primary {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .button-icon {
        transition: transform 0.3s ease;
    }

    .btn-primary:hover .button-icon {
        transform: translateX(3px);
    }

    .btn-primary:active .loading-spinner {
        display: inline-block;
    }

    /* Back to Login Link */
    .back-to-login {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        padding: 8px 12px;
        border-radius: 20px;
        background: rgba(255, 153, 0, 0.1);
    }

    .back-to-login:hover {
        background: rgba(255, 153, 0, 0.2);
        transform: translateX(-3px);
        text-decoration: none;
    }

    .back-to-login i {
        transition: transform 0.3s ease;
    }

    .back-to-login:hover i {
        transform: translateX(-2px);
    }

    /* Help Text Container */
    .help-text-container {
        margin-top: 2rem;
        padding: 20px;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 15px;
        border-left: 4px solid var(--amazon-orange);
        position: relative;
        overflow: hidden;
        animation: slideUp 0.8s ease-out 0.3s both;
    }

    .help-text-container::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 2px;
        background: linear-gradient(90deg, var(--amazon-orange), var(--amazon-gold), var(--amazon-orange));
        background-size: 200% 100%;
        animation: progressFlow 3s linear infinite;
    }

    .help-icon {
        color: var(--amazon-orange);
        margin-bottom: 8px;
        font-size: 1.2rem;
        animation: pulse 2s infinite;
    }

    .help-text {
        color: #666;
        line-height: 1.6;
        margin: 0;
        font-size: 0.9rem;
    }

    /* Input Focus Enhancement */
    .form-control:focus + .input-icon {
        color: var(--amazon-orange);
        transform: translateY(-50%) scale(1.1);
    }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .reset-key-icon {
            font-size: 2.5rem;
        }

        .reset-title {
            font-size: 1.5rem;
        }

        .reset-description {
            font-size: 0.9rem;
        }

        .help-text-container {
            padding: 15px;
        }
    }

    @@media (max-width: 576px) {
        .reset-key-icon {
            font-size: 2rem;
        }

        .reset-title {
            font-size: 1.3rem;
        }

        .help-text {
            font-size: 0.85rem;
        }
    }
</style>