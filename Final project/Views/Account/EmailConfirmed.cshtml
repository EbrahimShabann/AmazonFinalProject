@{
    ViewData["Title"] = "Email Confirmed";
    Layout = "_AccountPageLayout";
}

<body class="auth-page">
    <!-- Animated Background -->
    <div class="animated-bg">
        <div class="floating-shape">✅</div>
        <div class="floating-shape">🎉</div>
        <div class="floating-shape">📧</div>
        <div class="floating-shape">👤</div>
    </div>

    <!-- Particles System -->
    <div class="particles">
        <div class="particle" style="left: 10%; animation-delay: 0s;"></div>
        <div class="particle" style="left: 20%; animation-delay: 0.8s;"></div>
        <div class="particle" style="left: 30%; animation-delay: 1.6s;"></div>
        <div class="particle" style="left: 40%; animation-delay: 2.4s;"></div>
        <div class="particle" style="left: 50%; animation-delay: 3.2s;"></div>
        <div class="particle" style="left: 60%; animation-delay: 4s;"></div>
        <div class="particle" style="left: 70%; animation-delay: 4.8s;"></div>
        <div class="particle" style="left: 80%; animation-delay: 5.6s;"></div>
        <div class="particle" style="left: 90%; animation-delay: 6.4s;"></div>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="register-container">
                    <!-- Logo -->
                    <div class="logo-container">
                        <div class="logo">Amazon</div>
                    </div>

                    <!-- Success Icon with Animation -->
                    <div class="text-center mb-4">
                        <div class="amazon-smile">
                            <i class="fas fa-check-circle fa-5x" style="color: #28a745; animation: pulse 2s infinite;"></i>
                        </div>
                    </div>

                    <!-- Success Header -->
                    <div class="welcome-text">
                        <h4 style="color: var(--amazon-blue); font-weight: 600; margin-bottom: 1rem;">Email Verified Successfully</h4>
                    </div>

                    <!-- Success Message -->
                    <div class="text-center mb-4">
                        <h5 style="color: #28a745; font-weight: 600; margin-bottom: 1rem;">Thank you for verifying your email!</h5>
                        <p style="color: #666; margin-bottom: 1rem;">Your account has been successfully activated.</p>
                        <p style="color: #666; margin-bottom: 2rem;">You can now continue setting up your profile to get the best experience.</p>
                    </div>

                    <!-- Success Icons -->
                    <div class="ecommerce-icons">
                        <i class="fas fa-check-circle ecommerce-icon" style="color: #28a745;"></i>
                        <i class="fas fa-user-check ecommerce-icon" style="color: var(--amazon-orange);"></i>
                        <i class="fas fa-arrow-right ecommerce-icon" style="color: var(--amazon-blue);"></i>
                    </div>

                    <!-- Progress Indicator -->
                    <div class="progress-container">
                        <div class="progress-bar-animated" style="width: 60%; animation: none; background: linear-gradient(90deg, #28a745, var(--amazon-orange));"></div>
                    </div>
                    <div class="text-center mb-4">
                        <small style="color: #666;">Account Setup: 60% Complete</small>
                    </div>

                    <!-- Primary Action -->
                    <div class="form-group">
                        <a asp-action="SetProfilePic" class="btn-primary" style="text-decoration: none; display: block; text-align: center;">
                            <i class="fas fa-user-circle" style="margin-right: 8px;"></i>
                            Continue Setup
                        </a>
                    </div>

                    <!-- Secondary Actions -->
                    <div class="divider">
                        <span>or</span>
                    </div>

                    <div class="form-group">
                        <a asp-action="Login" class="btn-google" style="background: var(--amazon-light-gray); border: 1px solid #e0e0e0; color: var(--amazon-blue); text-decoration: none;">
                            <i class="fas fa-sign-in-alt"></i>
                            Go to Login
                        </a>
                    </div>

                    <!-- Welcome Benefits -->
                    <div class="text-center mt-4">
                        <div style="background: #d4edda; border: 1px solid #c3e6cb; border-radius: 10px; padding: 1rem; margin-bottom: 1rem;">
                            <h6 style="color: #155724; font-weight: 600; margin-bottom: 0.5rem;">
                                <i class="fas fa-gift" style="margin-right: 5px;"></i>
                                Welcome Benefits
                            </h6>
                            <p style="color: #155724; font-size: 0.9rem; margin: 0;">
                                Complete your profile to unlock personalized recommendations and exclusive offers!
                            </p>
                        </div>
                    </div>

                    <!-- Next Steps -->
                    <div class="service-icons">
                        <div style="text-align: center;">
                            <i class="fas fa-camera service-icon" style="font-size: 1.5rem;"></i>
                            <div style="font-size: 0.8rem; color: #666; margin-top: 0.5rem;">Add Photo</div>
                        </div>
                        <div style="text-align: center;">
                            <i class="fas fa-user-edit service-icon" style="font-size: 1.5rem;"></i>
                            <div style="font-size: 0.8rem; color: #666; margin-top: 0.5rem;">Complete Profile</div>
                        </div>
                        <div style="text-align: center;">
                            <i class="fas fa-shopping-cart service-icon" style="font-size: 1.5rem;"></i>
                            <div style="font-size: 0.8rem; color: #666; margin-top: 0.5rem;">Start Shopping</div>
                        </div>
                    </div>

                    <!-- Congratulations Message -->
                    <div class="text-center">
                        <p style="color: #999; font-size: 0.9rem;">
                            🎉 Congratulations! You're now part of the Amazon family.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>