@{
    ViewData["Title"] = "Password Reset Successful";
    Layout = "_AccountPageLayout";
}

<!-- Animated Background -->
<div class="animated-bg waiting-page">
    <div class="floating-shape" style="width: 80px; height: 80px; background: linear-gradient(135deg, #28a745, #20c997); border-radius: 50%; opacity: 0.1;"></div>
    <div class="floating-shape" style="width: 60px; height: 60px; background: linear-gradient(135deg, var(--amazon-orange), var(--amazon-hover)); border-radius: 30%; opacity: 0.08;"></div>
    <div class="floating-shape" style="width: 100px; height: 100px; background: linear-gradient(135deg, var(--amazon-blue), var(--amazon-light-blue)); border-radius: 40%; opacity: 0.06;"></div>
    <div class="floating-shape" style="width: 70px; height: 70px; background: linear-gradient(135deg, #667eea, #764ba2); border-radius: 50%; opacity: 0.09;"></div>
    <div class="floating-shape" style="width: 50px; height: 50px; background: linear-gradient(135deg, var(--amazon-gold), #ffd700); border-radius: 50%; opacity: 0.12;"></div>
</div>

<!-- Particles -->
<div class="particles waiting-page">
    <div class="particle-1" style="left: 10%; animation-delay: 0s;"></div>
    <div class="particle-2" style="left: 20%; animation-delay: 1s;"></div>
    <div class="particle-3" style="left: 30%; animation-delay: 2s;"></div>
    <div class="particle-1" style="left: 40%; animation-delay: 3s;"></div>
    <div class="particle-2" style="left: 50%; animation-delay: 4s;"></div>
    <div class="particle-3" style="left: 60%; animation-delay: 5s;"></div>
    <div class="particle-1" style="left: 70%; animation-delay: 6s;"></div>
    <div class="particle-2" style="left: 80%; animation-delay: 7s;"></div>
    <div class="particle-3" style="left: 90%; animation-delay: 0.5s;"></div>
</div>

<div class="waiting-container">
    <div class="waiting-card success-card">
        <!-- Logo -->
        <div class="logo-container">
            <div class="amazon-logo">
                <i class="fa-brands fa-amazon"></i>
            </div>
        </div>

        <!-- Success Animation -->
        <div class="success-animation">
            <div class="success-circle">
                <div class="success-icon">
                    <i class="fas fa-check"></i>
                </div>
            </div>
        </div>

        <!-- Success Content -->
        <div class="confirmation-content">
            <div class="waiting-text success-title">
                Password Reset Successful!
            </div>

            <div class="status-text success-subtitle">
                Your password has been successfully reset. You can now sign in with your new password.
            </div>

            <!-- Security Features -->
            <div class="security-features">
                <div class="feature-grid">
                    <div class="security-feature">
                        <div class="feature-icon security-icon">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <div class="feature-text">
                            <strong>Encrypted & Secure</strong>
                            <small>Password encrypted with industry standards</small>
                        </div>
                    </div>
                    <div class="security-feature">
                        <div class="feature-icon logout-icon">
                            <i class="fas fa-sign-out-alt"></i>
                        </div>
                        <div class="feature-text">
                            <strong>Auto Sign-out</strong>
                            <small>Signed out from all other devices</small>
                        </div>
                    </div>
                    <div class="security-feature">
                        <div class="feature-icon auth-icon">
                            <i class="fas fa-mobile-alt"></i>
                        </div>
                        <div class="feature-text">
                            <strong>2FA Ready</strong>
                            <small>Consider enabling two-factor authentication</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Button -->

            <a asp-action="Login" asp-controller="Account" class="btn btn-primary">
                    <span class="btn-content">
                    Sign In
                    </span>
             </a>
       

            <!-- Help Section -->
           
        </div>
    </div>
</div>

<!-- Enhanced Contact Modal -->
<div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content support-modal">
            <div class="modal-header support-header">
                <div class="modal-title-container">
                    <div class="support-icon-header">
                        <i class="fas fa-headset"></i>
                    </div>
