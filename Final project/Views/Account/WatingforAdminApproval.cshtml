</div>


 @section Scripts{
    <script>
        // Dynamic admin approval status messages
        const statusMessages = [
          "Your request is being reviewed by our admin team...",
          "Verifying your account information...",
          "Checking compliance requirements...",
          "Reviewing submitted documentation...",
          "Processing your approval request...",
          "Admin team is evaluating your application...",
          "Final review in progress...",
        ];

        let messageIndex = 0;
        const statusText = document.getElementById("statusText");

        function rotateStatusMessages() {
          statusText.style.opacity = "0";
          setTimeout(() => {
            statusText.textContent = statusMessages[messageIndex];
            statusText.style.opacity = "1";
            messageIndex = (messageIndex + 1) % statusMessages.length;
          }, 500);
        }

        // Change status message every 4 seconds (slower for admin approval)
        setInterval(rotateStatusMessages, 4000);

        // Create animated particles
        function createParticles() {
          const particlesContainer = document.getElementById("particles");
          const particleTypes = ["particle-1", "particle-2", "particle-3"];

          for (let i = 0; i < 20; i++) {
            const particle = document.createElement("div");
            particle.className = `particle ${
              particleTypes[Math.floor(Math.random() * particleTypes.length)]
            }`;
            particle.style.left = Math.random() * 100 + "%";
            particle.style.animationDelay = Math.random() * 15 + "s";
            particle.style.animationDuration = Math.random() * 10 + 8 + "s";
            particlesContainer.appendChild(particle);
          }
        }

        // Initialize particles
        createParticles();

        // Simulate admin approval process (for demo purposes)
        setTimeout(() => {
          // Could redirect to approval status page or dashboard
          // window.location.href = '/admin/approval-status';
        }, 30000); // Longer timeout for admin approval
    </script>
}

