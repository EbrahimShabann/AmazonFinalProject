@{
    ViewData["Title"] = "Error";
    Layout = "_AccountPageLayout";

}

<body class="auth-page">
    <!-- Animated Background -->
    <div class="animated-bg">
        <div class="floating-shape">⚠️</div>
        <div class="floating-shape">🔗</div>
        <div class="floating-shape">⏰</div>
        <div class="floating-shape">❌</div>
    </div>

    <!-- Particles System -->
    <div class="particles">
        <div class="particle" style="left: 15%; animation-delay: 0s;"></div>
        <div class="particle" style="left: 25%; animation-delay: 1.5s;"></div>
        <div class="particle" style="left: 35%; animation-delay: 3s;"></div>
        <div class="particle" style="left: 45%; animation-delay: 4.5s;"></div>
        <div class="particle" style="left: 55%; animation-delay: 6s;"></div>
        <div class="particle" style="left: 65%; animation-delay: 7.5s;"></div>
        <div class="particle" style="left: 75%; animation-delay: 1s;"></div>
        <div class="particle" style="left: 85%; animation-delay: 2.5s;"></div>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="register-container">
                    <!-- Logo -->
                    <div class="logo-container">
                        <div class="logo">Amazon</div>
                    </div>

                    <!-- Error Icon with Animation -->
                    <div class="text-center mb-4">
                        <div class="amazon-smile">
                            <i class="fas fa-exclamation-triangle fa-5x" style="color: #dc3545; animation: pulse 2s infinite;"></i>
                        </div>
                    </div>

                    <!-- Error Header -->
                    <div class="welcome-text">
                        <h4 style="color: var(--amazon-blue); font-weight: 600; margin-bottom: 1rem;">Verification Error</h4>
                    </div>

                    <!-- Error Message -->
                    <div class="text-center mb-4">
                        <h5 style="color: #dc3545; font-weight: 600; margin-bottom: 1rem;">Email Verification Failed</h5>
                        <p style="color: #666; margin-bottom: 1rem;">The verification link is invalid or has expired.</p>
                        <p style="color: #666; margin-bottom: 2rem;">Please try registering again or contact support if the problem persists.</p>
                    </div>

                    <!-- Error Icons -->
                    <div class="ecommerce-icons">
                        <i class="fas fa-times-circle ecommerce-icon" style="color: #dc3545;"></i>
                        <i class="fas fa-clock ecommerce-icon" style="color: #ffc107;"></i>
                        <i class="fas fa-redo ecommerce-icon" style="color: var(--amazon-orange);"></i>
                    </div>

                    <!-- Action Buttons -->
                    <div class="form-group">
                        <a asp-action="Register" class="btn-primary" style="margin-bottom: 1rem; text-decoration: none; display: block; text-align: center;">
                            <i class="fas fa-user-plus" style="margin-right: 8px;"></i>
                            Register Again
                        </a>
                    </div>

                    <!-- Divider -->
                    <div class="divider">
                        <span>or</span>
                    </div>

                    <!-- Secondary Actions -->
                    <div class="form-group">
                        <a asp-action="Login" class="btn-google" style="background: var(--amazon-light-gray); border: 1px solid #e0e0e0; color: var(--amazon-blue); text-decoration: none;">
                            <i class="fas fa-arrow-left"></i>
                            Back to Login
                        </a>
                    </div>

                    <!-- Additional Help -->
                    <div class="text-center mt-4">
                        <div style="background: #fff3cd; border: 1px solid #ffeaa7; border-radius: 10px; padding: 1rem; margin-bottom: 1rem;">
                            <h6 style="color: #856404; font-weight: 600; margin-bottom: 0.5rem;">
                                <i class="fas fa-info-circle" style="margin-right: 5px;"></i>
                                What happened?
                            </h6>
                            <p style="color: #856404; font-size: 0.9rem; margin: 0;">
                                Verification links expire after 24 hours for security reasons.
                            </p>
                        </div>
                    </div>

                    <!-- Support Contact -->
                    <div class="text-center">
                        <p style="color: #999; font-size: 0.9rem;">
                            Need help?
                            <a href="mailto:support@amazon.com" style="color: var(--amazon-orange); text-decoration: none;">
                                Contact Support
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>