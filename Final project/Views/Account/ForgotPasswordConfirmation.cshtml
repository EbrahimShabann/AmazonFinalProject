@{
    ViewData["Title"] = "Check Your Email";
    Layout = "_AccountPageLayout";
}

<!-- Animated Background -->
<div class="animated-bg">
    <div class="floating-shape">📧</div>
    <div class="floating-shape">✅</div>
    <div class="floating-shape">📬</div>
    <div class="floating-shape">💌</div>
</div>

<!-- Particles System -->
<div class="particles">
    <div class="particle" style="left: 15%; animation-delay: 0s;"></div>
    <div class="particle" style="left: 25%; animation-delay: 1.5s;"></div>
    <div class="particle" style="left: 35%; animation-delay: 3s;"></div>
    <div class="particle" style="left: 45%; animation-delay: 4.5s;"></div>
    <div class="particle" style="left: 55%; animation-delay: 6s;"></div>
    <div class="particle" style="left: 65%; animation-delay: 7.5s;"></div>
    <div class="particle" style="left: 75%; animation-delay: 9s;"></div>
    <div class="particle" style="left: 85%; animation-delay: 10.5s;"></div>
</div>

<div class="container-fluid">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
            <div class="login-container email-confirmation-container">
                <!-- Logo -->
                <div class="logo-container">
                    <div class="logo">
                        <i class="fa-brands fa-amazon"></i>
                    </div>
                </div>

                <!-- Success Content -->
                <div class="confirmation-content">
                    <!-- Success Icon with Animation -->
                    <div class="success-icon-container">
                        <div class="email-animation">
                            <i class="fas fa-envelope-open success-envelope"></i>
                            <div class="email-sparkles">
                                <span class="sparkle sparkle-1">✨</span>
                                <span class="sparkle sparkle-2">⭐</span>
                                <span class="sparkle sparkle-3">✨</span>
                            </div>
                        </div>
                    </div>

                    <h2 class="confirmation-title">Check Your Email</h2>

                    <!-- Success Message -->
                    <div class="success-message-card">
                        <div class="message-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="message-content">
                            <p>If an account with that email address exists, we've sent you a password reset link.</p>
                            <p>Please check your email and follow the instructions to reset your password.</p>
                        </div>
                    </div>

                    <!-- Info Steps Box -->
                    <div class="info-steps-container">
                        <div class="steps-header">
                            <i class="fas fa-list-ol steps-icon"></i>
                            <h5>What's Next?</h5>
                        </div>
                        <div class="steps-list">
                            <div class="step-item">
                                <div class="step-number">1</div>
                                <span>Check your email inbox (and spam folder)</span>
                            </div>
                            <div class="step-item">
                                <div class="step-number">2</div>
                                <span>Click the reset link in the email</span>
                            </div>
                            <div class="step-item">
                                <div class="step-number">3</div>
                                <span>Create a new password</span>
                            </div>
                            <div class="step-item">
                                <div class="step-number">4</div>
                                <span>Sign in with your new password</span>
                            </div>
                        </div>
                    </div>

                    <!-- Action Button -->
                    <div class="action-buttons">
                        <a asp-action="Login" asp-controller="Account" class="btn-primary back-to-login-btn">
                            <span class="loading-spinner"></span>
                            <i class="fas fa-sign-in-alt button-icon"></i>
                            Back to Login
                        </a>
                    </div>

                    <!-- Help Section -->
                    <div class="help-section-container">
                        <div class="help-divider">
                            <span>Need Help?</span>
                        </div>
                        <div class="help-content">
                            <h6>Didn't receive the email?</h6>
                            <p>
                                Check your spam folder or
                                <a asp-action="ForgotPassword" asp-controller="Account" class="retry-link">
                                    <i class="fas fa-redo-alt"></i>
                                    try again
                                </a>
                            </p>
                        </div>
                    </div>
              
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Set body class for auth page styling */
    body {
        background: #ffffff;
    }

    /* Email Confirmation Container */
    .email-confirmation-container {
        max-width: 550px;
        position: relative;
    }

    /* Confirmation Content */
    .confirmation-content {
        text-align: center;
        padding: 1rem 0;
        animation: slideUp 0.8s ease-out;
    }

    /* Success Icon Animation */
    .success-icon-container {
        margin-bottom: 2rem;
        position: relative;
    }

    .email-animation {
        position: relative;
        display: inline-block;
        animation: emailBounce 2s ease-in-out infinite;
    }

    .success-envelope {
        font-size: 4rem;
        color: #28a745;
        filter: drop-shadow(0 4px 12px rgba(40, 167, 69, 0.3));
        animation: envelopeGlow 2s ease-in-out infinite alternate;
    }

    .email-sparkles {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
    }

    .sparkle {
        position: absolute;
        font-size: 1rem;
        animation: sparkleFloat 3s ease-in-out infinite;
    }

    .sparkle-1 {
        top: 10%;
        left: 20%;
        animation-delay: 0s;
    }

    .sparkle-2 {
        top: 20%;
        right: 15%;
        animation-delay: 1s;
    }

    .sparkle-3 {
        bottom: 15%;
        left: 15%;
        animation-delay: 2s;
    }

    @@keyframes emailBounce {
        0%, 100%

    {
        transform: translateY(0) scale(1);
    }

    50% {
        transform: translateY(-10px) scale(1.05);
    }

    }

    @@keyframes envelopeGlow {
        0%

    {
        filter: drop-shadow(0 4px 12px rgba(40, 167, 69, 0.3));
    }

    100% {
        filter: drop-shadow(0 6px 20px rgba(40, 167, 69, 0.6));
    }

    }

    @@keyframes sparkleFloat {
        0%, 100%

    {
        transform: translateY(0) rotate(0deg);
        opacity: 0.7;
    }

    25% {
        transform: translateY(-15px) rotate(90deg);
        opacity: 1;
    }

    50% {
        transform: translateY(-5px) rotate(180deg);
        opacity: 0.8;
    }

    75% {
        transform: translateY(-20px) rotate(270deg);
        opacity: 1;
    }

    }

    /* Confirmation Title */
    .confirmation-title {
        color: var(--amazon-blue);
        margin-bottom: 2rem;
        font-weight: 600;
        font-size: 2rem;
        animation: textPulse 2s ease-in-out infinite;
    }

    /* Success Message Card */
    .success-message-card {
        background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
        border: 2px solid #28a745;
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
        animation: slideUp 0.8s ease-out 0.2s both;
    }

        .success-message-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background: linear-gradient(90deg, #28a745, #20c997, #28a745);
            background-size: 200% 100%;
            animation: progressFlow 3s linear infinite;
        }

    .message-icon {
        color: #28a745;
        font-size: 1.5rem;
        margin-bottom: 1rem;
        animation: pulse 2s infinite;
    }

    .message-content p {
        color: #155724;
        margin-bottom: 0.5rem;
        line-height: 1.6;
        font-weight: 500;
    }

        .message-content p:last-child {
            margin-bottom: 0;
        }

    /* Info Steps Container */
    .info-steps-container {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border: 1px solid #dee2e6;
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        text-align: left;
        position: relative;
        overflow: hidden;
        animation: slideUp 0.8s ease-out 0.4s both;
    }

        .info-steps-container::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background: linear-gradient(90deg, var(--amazon-orange), var(--amazon-gold), var(--amazon-orange));
            background-size: 200% 100%;
            animation: progressFlow 3s linear infinite;
        }

    .steps-header {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 1.5rem;
        color: var(--amazon-blue);
    }

    .steps-icon {
        color: var(--amazon-orange);
        font-size: 1.2rem;
        animation: pulse 2s infinite;
    }

    .steps-header h5 {
        margin: 0;
        font-weight: 600;
        font-size: 1.1rem;
    }

    .steps-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .step-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 10px;
        background: rgba(255, 255, 255, 0.7);
        border-radius: 10px;
        transition: all 0.3s ease;
        animation: fadeIn 0.5s ease-out;
    }

        .step-item:nth-child(1) {
            animation-delay: 0.1s;
        }

        .step-item:nth-child(2) {
            animation-delay: 0.2s;
        }

        .step-item:nth-child(3) {
            animation-delay: 0.3s;
        }

        .step-item:nth-child(4) {
            animation-delay: 0.4s;
        }

        .step-item:hover {
            background: rgba(255, 153, 0, 0.1);
            transform: translateX(5px);
        }

    .step-number {
        background: linear-gradient(135deg, var(--amazon-orange), var(--amazon-hover));
        color: white;
        width: 28px;
        height: 28px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 0.9rem;
        flex-shrink: 0;
        box-shadow: 0 2px 8px rgba(255, 153, 0, 0.3);
    }

    .step-item span {
        color: #495057;
        font-weight: 500;
        line-height: 1.4;
    }

    /* Action Buttons */
    .action-buttons {
        margin-bottom: 2rem;
        animation: slideUp 0.8s ease-out 0.6s both;
    }

    .back-to-login-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        transition: all 0.3s ease;
    }

        .back-to-login-btn:hover .button-icon {
            transform: translateX(-3px);
        }

    /* Help Section */
    .help-section-container {
        animation: slideUp 0.8s ease-out 0.8s both;
    }

    .help-divider {
        position: relative;
        text-align: center;
        margin-bottom: 1.5rem;
        color: #666;
        font-weight: 600;
    }

        .help-divider::before {
            content: "";
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(to right, transparent, #ddd, transparent);
        }

        .help-divider span {
            background: white;
            padding: 0 20px;
            position: relative;
            z-index: 1;
            color: var(--amazon-blue);
        }

    .help-content {
        background: rgba(248, 249, 250, 0.8);
        border-radius: 12px;
        padding: 1.5rem;
        border: 1px solid #e9ecef;
    }

        .help-content h6 {
            margin-bottom: 1rem;
            color: var(--amazon-blue);
            font-weight: 600;
        }

        .help-content p {
            color: #6c757d;
            margin: 0;
            line-height: 1.6;
        }

    .retry-link {
        color: var(--amazon-orange);
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 2px 6px;
        border-radius: 4px;
    }

        .retry-link:hover {
            color: var(--amazon-hover);
            background: rgba(255, 153, 0, 0.1);
            text-decoration: none;
            transform: translateX(2px);
        }

        .retry-link i {
            font-size: 0.9rem;
            transition: transform 0.3s ease;
        }

        .retry-link:hover i {
            transform: rotate(180deg);
        }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .success-envelope

    {
        font-size: 3rem;
    }

    .confirmation-title {
        font-size: 1.6rem;
    }

    .success-message-card,
    .info-steps-container {
        padding: 1rem;
    }

    .step-number {
        width: 24px;
        height: 24px;
        font-size: 0.8rem;
    }

    }

    @@media (max-width: 576px) {
        .success-envelope

    {
        font-size: 2.5rem;
    }

    .confirmation-title {
        font-size: 1.4rem;
    }

    .step-item {
        gap: 10px;
        padding: 8px;
    }

        .step-item span {
            font-size: 0.9rem;
        }

    .help-content {
        padding: 1rem;
    }

    }

    /* Animation Delays for Staggered Effects */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>