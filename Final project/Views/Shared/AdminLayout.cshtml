<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard | Amazon Style</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link href="/css/Admin.css" rel="stylesheet" />



</head>
<body>
    <!-- Amazon-Style Header -->

    <header class="amazon-header">
        <div class="logo-section">
            <div class="logo">
                <i class="fas fa-cube"></i> Admin<span>Pro</span>
            </div>
        </div>

        <div class="search-bar">
            <input type="text" placeholder="Search across dashboard...">
            <button><i class="fas fa-search"></i></button>
        </div>

        <div class="user-actions">
            <a href="#">
                <i class="fas fa-bell"></i>
                <span>Alerts</span>
                <span class="notification-badge">5</span>
            </a>
            <a href="#">
                <i class="fas fa-envelope"></i>
                <span>Messages</span>
            </a>
            <a href="#">
                <i class="fas fa-cog"></i>
                <span>Settings</span>
            </a>
            <a href="#">
                <i class="fas fa-user-circle"></i>
                <span>Admin</span>
            </a>
        </div>
    </header>

    <div class="main-container">
        <!-- Sidebar Navigation -->
        <nav class="sidebar">
            <a class="sidebar-item @(ViewBag.ActivePage == "Dashboard" ? "active" : "")" asp-action="Index" asp-controller="AdminDashboard">
                <i class="fas fa-home"></i>
                <span>Dashboard</span>
            </a>
            <div class="sidebar-item @(ViewBag.ActivePage == "SupportTickets" ? "active" : "")">
                <i class="fas fa-users"></i>
                <span>Customers</span>
            </div>
            <div class="sidebar-item @(ViewBag.ActivePage == "SupportTickets" ? "active" : "")">
                <i class="fas fa-store"></i>
                <span>Sellers</span>
            </div>
            <a class="sidebar-item @(ViewBag.ActivePage == "Products" ? "active" : "")" asp-action="pendingProduct" asp-controller="AdminProducts">
                <i class="fas fa-box"></i>
                <span>Products</span>
            </a>
            <div class="sidebar-item @(ViewBag.ActivePage == "SupportTickets" ? "active" : "")">
                <i class="fas fa-chart-line"></i>
                <span>Analytics</span>
            </div>
            <div class="sidebar-item @(ViewBag.ActivePage == "SupportTickets" ? "active" : "")">
                <i class="fas fa-ticket-alt"></i>
                <span>Support Tickets</span>
            </div>
            <div class="sidebar-item @(ViewBag.ActivePage == "SupportTickets" ? "active" : "")">
                <i class="fas fa-cog"></i>
                <span>Settings</span>
            </div>
            <div class="sidebar-item @(ViewBag.ActivePage == "SupportTickets" ? "active" : "")">
                <i class="fas fa-sign-out-alt"></i>
                <span>Logout</span>
            </div>
        </nav>

        <!-- Main Content -->


            @RenderBody();

    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</body>
</html>