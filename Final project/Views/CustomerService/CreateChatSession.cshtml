@using Final_project.Models.DTOs.CustomerService
@model CreateChatSessionDTO
@{
    ViewData["Title"] = "Create Chat Session";
}
<link href="/css/CustomerProfile.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="row">
        <partial name="_SideBar" />

        <div class="col-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Create Chat Session</h2>
                <a href="@Url.Action("Chats")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Chats
                </a>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Create New Chat Session</h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateChatSession" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CustomerId" class="form-label">Customer</label>
                                    <select asp-for="CustomerId" class="form-select" required>
                                        <option value="">Select a customer...</option>
                                        @foreach (var customer in ViewBag.Customers)
                                        {
                                            <option value="@customer.Id">@customer.UserName (@customer.Email)</option>
                                        }
                                    </select>
                                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="SellerId" class="form-label">Seller</label>
                                    <select asp-for="SellerId" class="form-select" required>
                                        <option value="">Select a seller...</option>
                                        @foreach (var seller in ViewBag.Sellers)
                                        {
                                            <option value="@seller.Id">@seller.UserName (@seller.Email)</option>
                                        }
                                    </select>
                                    <span asp-validation-for="SellerId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Note:</strong> Only customer service representatives can create chat sessions between customers and sellers.
                            Once created, both the customer and seller will be able to participate in the chat.
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-comments"></i> Create Chat Session
                            </button>
                            <a href="@Url.Action("Chats")" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add validation to ensure different customer and seller are selected
            $('form').on('submit', function(e) {
                var customerId = $('#CustomerId').val();
                var sellerId = $('#SellerId').val();

                if (customerId === sellerId && customerId !== '') {
                    e.preventDefault();
                    alert('Customer and Seller must be different users.');
                    return false;
                }
            });
        });
    </script>
} 