@{
    ViewData["Title"] = "Your Account";
}

<title>Your Account - Amazon</title>

<!-- Font Awesome & Bootstrap (إذا لم تكن مضمنة بالفعل) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    .account-tile {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        text-decoration: none;
        border: 1px solid #dee2e6;
        border-radius: 10px;
        padding: 20px;
        display: block;
        color: #000;
        background-color: #fff;
        height: 100%;
    }

        .account-tile:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        }

    .icon-circle {
        width: 50px;
        height: 50px;
        background-color: #f0f2f2;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        overflow: hidden;
    }

    .icon-img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .tile-footer {
        margin-top: 10px;
        text-align: right;
    }
</style>

<div class="container my-5">
    <h2 class="mb-4">Your Account</h2>

    <div class="row g-4">
        <!-- Orders -->
        <div class="col-md-4">
            <a href="/Customer/Profile/Orders" class="account-tile">
                <div class="d-flex align-items-center">
                    <div class="icon-circle me-3">
                        <img alt="Orders" src="https://m.media-amazon.com/images/G/42/x-locale/cs/help/images/gateway/self-service/order._CB657847415_.png" class="icon-img">
                    </div>
                    <div>
                        <h6>Your Orders</h6>
                        <p>Track, return, or buy things again</p>
                    </div>
                </div>
               
            </a>
        </div>
        <!-- Login & Security -->
        <div class="col-md-4">
            <a href="/Customer/Security" class="account-tile">
                <div class="d-flex align-items-center">
                    <div class="icon-circle me-3">
                        <img alt="" src="https://m.media-amazon.com/images/G/42/x-locale/cs/help/images/gateway/self-service/security._CB657836742_.png" class="icon-img">
                    </div>
                    <div>
                        <h6>Login & Security</h6>
                        <p>Manage password, email, mobile number</p>
                    </div>
                </div>
            </a>
        </div>
        <!-- Gift Cards -->
        <div class="col-md-4">
            <div class="account-tile">
                <div class="d-flex align-items-center">
                    <div class="icon-circle me-3">
                        <img alt="Gift Cards" src="https://m.media-amazon.com/images/G/42/x-locale/cs/help/images/gateway/self-service/gift_card._CB657847415_.png" class="icon-img">
                    </div>
                    <div>
                        <h6>Gift Cards</h6>
                        <p>View balance or redeem a card</p>
                    </div>
                </div>
                
            </div>
        </div>
        <!-- Messages -->
        <div class="col-md-4">
            <a href="/Customer/Messages" class="account-tile">
                <div class="d-flex align-items-center">
                    <div class="icon-circle me-3">
                        <i class="fa-solid fa-envelope fa-2x text-primary"></i>
                    </div>
                    <div>
                        <h6>Your Messages</h6>
                        <p>View messages from sellers & Amazon</p>
                    </div>
                </div>
            </a>
        </div>
        <!-- Amazon Mobile App -->
        <div class="col-md-4">
            <div class="account-tile">
                <div class="d-flex align-items-center">
                    <div class="icon-circle me-3">
                        <i class="fa-solid fa-mobile-screen fa-2x text-primary"></i>
                    </div>
                    <div>
                        <h6>Amazon Mobile App</h6>
                        <p>Download the Amazon App</p>
                    </div>
                </div>
                
            </div>
        </div>

        <!-- Your Lists -->
        <div class="col-md-4">
            <div class="account-tile">
                <div class="d-flex align-items-center">
                    <div class="icon-circle me-3">
                        <i class="fa-solid fa-list fa-2x text-primary"></i>
                    </div>
                    <div>
                        <h6>Your Lists</h6>
                        <p>Modify and share your lists</p>
                    </div>
                </div>
               
            </div>
        </div>

        <!-- Contact Us -->
        <div class="col-md-4">
            <div class="account-tile">
                <div class="d-flex align-items-center">
                    <div class="icon-circle me-3">
                        <img alt="Contact Us" src="https://m.media-amazon.com/images/G/42/x-locale/cs/help/images/gateway/self-service/contact_us._CB665051409_.png" class="icon-img">
                    </div>
                    <div>
                        <h6>Contact Us</h6>
                        <p>Customer service via phone/chat</p>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>
