
    <title>Your Account - Amazon</title>
   
   <link href="/css/CustomerProfile.css" rel="stylesheet" />

    <!-- Header (simplified) -->
    <header class="bg-dark py-2">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <a href="#" class="navbar-brand">
                    <img src="https://www.amazon.com/favicon.ico" alt="Amazon" height="30">
                </a>
                <div class="d-flex align-items-center">
                    <span class="text-white me-3">Hello, User</span>
                    <a href="#" class="text-white"><i class="fas fa-shopping-cart fa-lg"></i></a>
                </div>
            </div>
        </div>
    </header>

    <div class="container my-4">
        <div class="row">
            <!-- Left Sidebar Navigation -->
          <partial name="_SideBar"/>
            <!-- Main Content Area -->
            <div class="col-md-9">
                <div class="bg-white p-4 rounded shadow-sm">
                    <h4 class="mb-4">Account Overview</h4>

                    <!-- Order Summary -->
                    <div class="card-option">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5><i class="fas fa-box-open amazon-orange me-2"></i> Your Orders</h5>
                                <p class="mb-0 text-muted">Track, return, or buy things again</p>
                            </div>
                            <a href="#" class="btn btn-outline-secondary btn-sm">View All</a>
                        </div>
                    </div>

                    <!-- Login & Security -->
                    <div class="card-option">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5><i class="fas fa-lock amazon-orange me-2"></i> Login & Security</h5>
                                <p class="mb-0 text-muted">Manage password, email, mobile number, and security settings</p>
                            </div>
                            <a href="#" class="btn btn-outline-secondary btn-sm">Edit</a>
                        </div>
                    </div>

                    <!-- Gift Cards -->
                    <div class="card-option">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5><i class="fas fa-gift amazon-orange me-2"></i> Gift Cards</h5>
                                <p class="mb-0 text-muted">View balance or redeem a card</p>
                            </div>
                            <a href="#" class="btn btn-outline-secondary btn-sm">View</a>
                        </div>
                    </div>

                    <!-- Payments -->
                    <div class="card-option">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5><i class="fas fa-credit-card amazon-orange me-2"></i> Your Payments</h5>
                                <p class="mb-0 text-muted">View all transactions, manage payment methods and settings</p>
                            </div>
                            <a href="#" class="btn btn-outline-secondary btn-sm">Manage</a>
                        </div>
                    </div>

                    <!-- Addresses -->
                    <div class="card-option">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5><i class="fas fa-map-marker-alt amazon-orange me-2"></i> Your Addresses</h5>
                                <p class="mb-0 text-muted">Edit addresses for orders</p>
                            </div>
                            <a href="#" class="btn btn-outline-secondary btn-sm">Edit</a>
                        </div>
                    </div>

                    <!-- Installment Plan -->
                    <div class="card-option">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5><i class="fas fa-calendar-alt amazon-orange me-2"></i> Installment Plan</h5>
                                <p class="mb-0 text-muted">View installment plans offered</p>
                            </div>
                            <a href="#" class="btn btn-outline-secondary btn-sm">View</a>
                        </div>
                    </div>

                    <!-- Contact Us -->
                    <div class="card-option">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5><i class="fas fa-headset amazon-orange me-2"></i> Contact Us</h5>
                                <p class="mb-0 text-muted">Contact our Customer Service via Phone or Chat</p>
                            </div>
                            <a href="#" class="btn btn-outline-secondary btn-sm">Contact</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    