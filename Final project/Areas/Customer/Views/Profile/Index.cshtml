@{
    ViewData["Title"] = "Your Account";
}


<style>
    .account-tile {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        text-decoration: none;
        border: 1px solid #dee2e6;
        border-radius: 10px;
        padding: 20px;
        display: block;
        color: #000;
        background-color: #fff;
        height: 100%;
    }

        .account-tile:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            text-decoration: none;
        }

    .icon-circle {
        width: 50px;
        height: 50px;
        background-color: #f0f2f2;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        overflow: hidden; /* important for rounding the image */
    }

    .icon-img {
        width: 100%;
        height: 100%;
        object-fit: contain; /* or "cover" if you want to fill the circle */
    }

    .account-tile h6 {
        font-weight: bold;
    }

    .account-tile p {
        font-size: 0.875rem;
    }
    a h2:hover{
        cursor: pointer;
        text-decoration: underline;
        color:darkgoldenrod
    }
</style>

<div class="container my-5">
    <a href="/Customer/Profile/Index">
