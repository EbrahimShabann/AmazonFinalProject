@using Final_project.Services.Customer
@model PagedResult<chat_message>
    <title>Your Messages - Amazon</title>
    <link href="/css/CustomerProfile.css" rel="stylesheet">
  
    <!-- Header (simplified) -->
    <partial name="_Header" />  

    <div class="container my-4">
        <div class="row">
            <!-- Left Sidebar Navigation -->
          <partial name="_SideBar"/>

            <!-- Main Content Area -->
            <div class="col-md-9">
                <div class="messages-container p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4><i class="fas fa-envelope amazon-orange me-2"></i> Your Messages</h4>
                        <div class="d-flex">
                            <div class="input-group me-3" style="width: 250px;">
                                <input type="text" class="form-control" placeholder="Search messages">
                                <button class="btn btn-outline-secondary" type="button"><i class="fas fa-search"></i></button>
                            </div>
                            <button class="btn btn-amazon"><i class="fas fa-sync-alt me-1"></i> Refresh</button>
                        </div>
                    </div>

                    <!-- Message Filter -->
                    <div class="d-flex mb-4">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-outline-secondary active">All messages</button>
                            <button type="button" class="btn btn-outline-secondary">Unread</button>
                            <button type="button" class="btn btn-outline-secondary">Archived</button>
                        </div>
                        <div class="ms-auto">
                            <button class="btn btn-outline-secondary"><i class="fas fa-archive me-1"></i> Archive selected</button>
                            <button class="btn btn-outline-secondary"><i class="fas fa-trash me-1"></i> Delete selected</button>
                        </div>
                    </div>

                    <!-- Message List -->
                    <div class="message-list">
                    @foreach(var msg in Model.Items)
                    {
                        <!-- Message -->
                        <div class="message-card unread">
                            <div class="row">
                                <div class="col-md-1 d-flex align-items-center">
                                    <input type="checkbox" class="form-check-input">
                                </div>
                               
                                <div class="col-md-8">
                                    <div class="d-flex justify-content-between">
                                        <h6 class="mb-1">Amazon Customer Service</h6>
                                        <small class="text-muted">@msg.sent_at?</small>
                                    </div>
                                    @if(msg.is_read==true)
                                    {
                                        <p class="mb-1 text-muted"> <i class="fas fa-check-circle text-success"></i>Read</p>
                                    }
                                    else
                                    {
                                        <p class="mb-1 text-primary fw-bold"><i class="fas fa-exclamation-triangle me-1"></i>Unread</p>
                                    }
    )
                                    
                                    <p class="mb-0 text-truncate">@msg.message</p>
                                </div>
                                <div class="col-md-2 d-flex align-items-center justify-content-end message-actions">
                                    <button class="btn btn-sm btn-outline-secondary me-1"><i class="fas fa-archive"></i></button>
                                    <button class="btn btn-sm btn-outline-secondary"><i class="fas fa-trash"></i></button>
                                </div>
                            </div>
                        </div>

                    }
                
                     
                    </div>

                    <!-- Pagination -->
                    <partial name="_Pagination" model="@Model"/>
                </div>
            </div>
        </div>
    </div>
